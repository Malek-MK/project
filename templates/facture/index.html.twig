{% extends 'template1.html.twig' %}

{% block title %}Liste Facture{% endblock %}

{% block body %}
    <div class="container">
    <div class="panel panel-primary">
    <div class="panel-heading">
    <i ></i><h2>Liste Facture</h2>
</div>
<div class="panel-body"> 

    <table class="table" table-condensed>
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Base0</th>
               
                <th>Totht</th>
                <th>Totrem</th>
                <th>Tottva</th>
                <th>Timbre</th>
                <th>Tottc</th>
               
                <th>Net</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.client.designation }}</td>
                <td>{{ facture.base0 }}</td>
               
                <td>{{ facture.totht }}</td>
                <td>{{ facture.totrem }}</td>
                <td>{{ facture.tottva }}</td>
                <td>{{ facture.timbre }}</td>
                <td>{{ facture.tottc }}</td>
               
                <td>{{ facture.net }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}"class = "btn btn-success">show</a><br>
                    <a href="{{ path('facture_edit', {'id': facture.id}) }}" class = "btn btn-warning">edit</a>
                                        {{ include('facture/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}"class="btn btn-info">Create new</a>
</div>
</div>
</div>
{% endblock %}