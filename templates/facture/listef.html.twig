{% block body %}
    <h1>Facture index</h1>

    <table class="table" table-condensed>
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Base0</th>
               
                <th>Totht</th>
                <th>Totrem</th>
                <th>Tottva</th>
                <th>Timbre</th>
                <th>Tottc</th>
              
                <th>Net</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.client.designation }}</td>
                <td>{{ facture.base0 }}</td>
                
                <td>{{ facture.totht }}</td>
                <td>{{ facture.totrem }}</td>
                <td>{{ facture.tottva }}</td>
                <td>{{ facture.timbre }}</td>
                <td>{{ facture.tottc }}</td>
                
                <td>{{ facture.net }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}">Create</a>
{% endblock %}