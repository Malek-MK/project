{% extends 'template1.html.twig' %}

{% block title %}Liste Commande{% endblock %}

{% block body %}
     <div class="container">
    <div class="panel panel-primary">
    <div class="panel-heading">
    <i ></i><h2>Liste Commande</h2>
</div>
<div class="panel-body">

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Numcom</th>
                <th>Date</th>
                <th>Tht</th>
                <th>Ttva</th>
                <th>Tttc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numcom }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.tht }}</td>
                <td>{{ commande.ttva }}</td>
                <td>{{ commande.tttc }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}"class="btn btn-success">show</a>
                   <br>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}"class="btn btn-warning">edit</a>
                    {{ include('commande/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}" class="btn btn-info">Create new</a>
</div>
</div>
</div>
{% endblock %}
