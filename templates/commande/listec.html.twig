{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcom</th>
                <th>DateComm</th>
                <th>observation</th>
                <th>totht</th>
                <th>tottva</th>
                <th>totttc</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numcom }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.obs }}</td>
                <td>{{ commande.tht }}</td>
                <td>{{ commande.ttva }}</td>
                <td>{{ commande.tttc }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}