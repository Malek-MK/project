{% extends 'template1.html.twig' %}

{% block title %}Liste Produit{% endblock %}

{% block body %}
    <div class="container">
    <div class="panel panel-primary">
    <div class="panel-heading">
    <i ></i><h2>Liste Produit</h2>
</div>
<div class="panel-body">

    <table class="table table_condensed">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Prix Achat</th>
                <th>Prix de Vente</th>
                <th>Tva</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.pa }}</td>
                <td>{{ produit.pv }}</td>
                <td>{{ produit.tva }}</td>
               <td><img src ="{{ asset('uploads/images/' ~ produit.image) }}"
   alt =""  width="100" height="100"></td>
                <td>
               <a href="{{ path('produit_show', {'id': produit.id}) }}"class="btn btn-success">show</a>
                   <br>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"class="btn btn-warning">edit</a>
                    {{ include('produit/_delete_form.html.twig') }}
              </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}" class="btn btn-info">Create new</a>
</div>
</div>
</div>
{% endblock %}
