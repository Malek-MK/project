{% extends 'template1.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Mail</th>
                <th>Object</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.subject }}</td>
                <td>{{ mail.mail }}</td>
                <td>{{ mail.object }}</td>
                <td>
                    <a href="{{ path('mail_show', {'id': mail.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('mail_edit', {'id': mail.id}) }}" class="btn btn-warning">edit</a>
                    {{ include('mail/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mail_new') }}" class="btn btn-info">Create new</a>
{% endblock %}
